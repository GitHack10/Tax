<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/phone_input_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.screens.auth.phoneinput.ui.PhoneInputFragment">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:text="Введите номер или авторизуйтесь по номеру телефона"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/MaskedEditText_authFragment_phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <br.com.sapereaude.maskedEditText.MaskedEditText
        android:id="@+id/MaskedEditText_authFragment_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="64dp"
        android:hint="@string/phone"
        android:inputType="phone"
        android:textColor="@android:color/black"
        app:allowed_chars="0123456789"
        app:keep_hint="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:mask="+7 (###) ###-##-##" />


    <Button
        android:id="@+id/Button_homeFragment_historyTransactions"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="98dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="98dp"
        android:background="@drawable/background_button"
        android:enabled="true"
        android:focusable="true"
        android:text="Далее"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MaskedEditText_authFragment_phone"
        tools:visibility="visible" />


</android.support.constraint.ConstraintLayout>