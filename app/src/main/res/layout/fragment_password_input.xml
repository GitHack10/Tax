<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/password_input_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.screens.auth.passwordinput.ui.PasswordInputFragment">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_number"
            android:text="+7 (989)-123-33-22"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="64dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.361"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Введите смс-код из сообщения"
            app:layout_constraintTop_toBottomOf="@+id/text_number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/textView"/>

    <com.chaos.view.PinView
            android:id="@+id/PinView_confirmFragment_code"
            style="@style/PinWidget.PinView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:inputType="number"
            android:textColor="@android:color/black"
            app:hideLineWhenFilled="true"
            app:itemCount="6"
            android:layout_marginRight="8dp"
            app:itemSpacing="16dp"
            app:itemWidth="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:viewType="line"
            tools:text="123456" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/text_number" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>

    <Button
            android:id="@+id/Button_homeFragment_historyTransactions"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="98dp"
            android:layout_marginEnd="98dp"
            android:background="@drawable/background_button"
            android:enabled="true"
            android:focusable="true"
            android:text="Далее"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:visibility="visible"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/PinView_confirmFragment_code"/>
</android.support.constraint.ConstraintLayout>