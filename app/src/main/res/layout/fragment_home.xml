<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.screens.home.HomeFragment">

    <include
            android:id="@+id/Toolbar_homeFragment_title"
            layout="@layout/toolbar_home"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <Button
            android:id="@+id/Button_homeFragment_sendFP"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/profile_save"
            android:textAllCaps="false"
            android:textColor="@color/colorTextHint"
            android:textSize="@dimen/text_premid"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/ripple_button_enabled"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <TextView
            android:text="Сканировать QR код"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blueGradientDark" android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/editText" app:layout_constraintTop_toBottomOf="@+id/editText"
            android:layout_marginStart="2dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:hint="Номер ФП"
            android:id="@+id/editText"
            app:layout_constraintStart_toStartOf="@+id/Button_homeFragment_sendFP"
            app:layout_constraintEnd_toEndOf="@+id/Button_homeFragment_sendFP" tools:layout_editor_absoluteY="266dp"/>
    <TextView
            android:text="Отсканируйте QR код на чеке\n или введите номер ФП"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:gravity="center" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/editText" android:textSize="18sp"/>

</android.support.constraint.ConstraintLayout>