<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.screens.auth.signin.ui.SignInFragment">

    <include
        android:id="@+id/signInToolbar"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/TextView_authFragment_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="54dp"
        android:gravity="center"
        android:text="@string/sign_in_subtitle"
        android:textSize="@dimen/text_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signInToolbar" />

    <TextView
        android:id="@+id/TextView_authFragment_emailTitle"
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:layout_marginStart="34dp"
        android:text="@string/email_title"
        android:textColor="@color/textDescription"
        android:textSize="@dimen/text_premid"
        app:layout_constraintBottom_toBottomOf="@+id/EditText_authFragment_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/EditText_authFragment_email" />

    <EditText
        android:id="@+id/EditText_authFragment_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="34dp"
        android:hint="@string/email_hint"
        android:inputType="textEmailAddress"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/EditText_authFragment_password"
        app:layout_constraintTop_toBottomOf="@+id/TextView_authFragment_desc" />

    <TextView
        android:id="@+id/TextView_authFragment_passwordTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:text="@string/password_title"
        android:textColor="@color/textDescription"
        android:textSize="@dimen/text_premid"
        app:layout_constraintBottom_toBottomOf="@+id/EditText_authFragment_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/EditText_authFragment_password" />

    <EditText
        android:id="@+id/EditText_authFragment_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="34dp"
        android:hint="@string/password_hint"
        android:inputType="numberPassword"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_premid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/TextView_authFragment_passwordTitle"
        app:layout_constraintTop_toBottomOf="@+id/EditText_authFragment_email" />

    <TextView
        android:id="@+id/TextView_authFragment_error"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:drawableStart="@drawable/ic_info"
        android:drawablePadding="8dp"
        android:textColor="@color/error"
        android:textSize="@dimen/text_min"
        android:text="@string/incorrect_auth_data"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@id/TextView_authFragment_passwordTitle"
        app:layout_constraintEnd_toEndOf="@id/EditText_authFragment_password"
        app:layout_constraintTop_toBottomOf="@+id/EditText_authFragment_password"/>

    <Button
        android:id="@+id/Button_authFragment_signIn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="89dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="89dp"
        android:background="@drawable/button_disabled"
        android:enabled="true"
        android:focusable="true"
        android:text="@string/sign_in"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextView_authFragment_error" />

    <TextView
        android:id="@+id/TextView_authFragment_restorePassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/restore_password"
        android:textColor="@color/hintTitle"
        android:textSize="@dimen/text_premid"
        app:layout_constraintEnd_toEndOf="@id/Button_authFragment_signIn"
        app:layout_constraintStart_toStartOf="@+id/Button_authFragment_signIn"
        app:layout_constraintTop_toBottomOf="@+id/Button_authFragment_signIn" />

    <TextView
        android:id="@+id/TextView_authFragment_registration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/sign_up"
        android:textColor="@color/textDescription"
        android:textSize="@dimen/text_premid"
        app:layout_constraintEnd_toEndOf="@id/Button_authFragment_signIn"
        app:layout_constraintStart_toStartOf="@+id/Button_authFragment_signIn"
        app:layout_constraintTop_toBottomOf="@+id/TextView_authFragment_restorePassword" />

</android.support.constraint.ConstraintLayout>