<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomEditText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorTextHint</item>
        <item name="colorControlNormal">@color/line</item>
        <item name="colorControlActivated">@color/line</item>
        <item name="colorControlHighlight">@color/line</item>
    </style>

    <style name="CustomProgressBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@android:color/white</item>
    </style>


    <style name="CustomButtonStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="borderlessButtonStyle">?android:attr/borderlessButtonStyle</item>
        <item name="selectableItemBackground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="CustomRadioButton" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorLightGradient</item>
        <item name="android:textColorSecondary">@color/radioLine</item>
    </style>

    <style name="CustomDatePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_popub</item>
    </style>

</resources>
